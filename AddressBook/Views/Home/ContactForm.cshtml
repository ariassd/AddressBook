@using AddressBook.Models;
@using System.Collections.Generic;
@{
    Layout = null;
}
<form id="add-new-contact-values">
    <input type="hidden" name="objectid" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value="">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Last Name</label>
            <input type="text" class="form-control" name="lastname" placeholder="Last Name" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress">
            Email
            <a href="#" id="add-email-field">
                <i class="far fa-plus-square"></i>
            </a>
        </label>
        <input type="email" class="form-control email-field" name="email" placeholder="someone@mail.com" value="">

    </div>
    <div class="form-group">
        <label for="inputAddress">
            Phone
            <a href="#" id="add-phone-field">
                <i class="far fa-plus-square"></i>
            </a>
        </label>
        <input type="email" class="form-control phone-field" name="phone" placeholder="2040-0987" value="">

    </div>
    <div class="form-group">
        <label for="inputAddress2">Notes</label>
        <input type="text" class="form-control" name="notes" placeholder="Classmante, Colleague, Friend" value="">
    </div>
</form>